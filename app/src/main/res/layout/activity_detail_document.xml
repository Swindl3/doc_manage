<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDocument">

    <include
        android:id="@+id/tb"
        layout="@layout/app_bar_using_navigation_drawer" />

    <ImageView
        android:id="@+id/imgCurrentCover"
        android:layout_width="148dp"
        android:layout_height="211dp"
        android:layout_below="@id/tb"
        android:src="@drawable/ic_document"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tvCurrentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:layout_below="@id/imgCurrentCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgCurrentCover"/>


</RelativeLayout>